@model InvestmentResult

@{
    /**/

    /**/

    ViewBag.Title = "Результаты управления";

}

@if (Model == null)
{
    <p class="bg-warning" style="padding: 15px">Данные по инвестору не найдены</p>
}
else
{

    <link href="/Content/level4.css" rel="stylesheet" />

    <h1 class="page-header">Результаты управления</h1>

    <p class="alert alert-info">Страница находится в разработке</p>

    <h2>@Model.fundName</h2>
    <a href="/details/fund/@Model.fundId/">Страница фонда</a>

    <h3>Общая информация</h3>

    <table class="table table-striped">
        <tr><td>Название Фонда</td><td>@Model.fundName</td></tr>
        <tr><td>Год создания </td><td>@Model.foundatationDate</td></tr>
        <tr><td>Стратегия </td><td>@Model.Strategy</td></tr>
        <tr><td>Размер фонда при финальном закрытии </td><td>@Model.fundSizeAtFinalClosing</td></tr>
        <tr><td>Активы под управлением (AUM) </td><td>@Model.activesUnderManagement</td></tr>
        <tr><td>Дата предоставления данных </td><td>@Model.dateOfData</td></tr>
        <tr><td>Статус фонда </td><td>@Model.fundStatus</td></tr>
        <tr><td>Число инвестиций</td><td>@Model.numberOfInvestment</td></tr>
        <tr><td>Число выходов</td><td>@Model.numberOfExits</td></tr>
        <tr><td>Число компаний в портфеле</td><td>@Model.numberOfCompaniesInPortfolio</td></tr>
        <tr><td>Целевой IRR</td><td>@Model.targetIRR</td></tr>
        <tr><td>Фактический IRR</td><td>@Model.factIRR</td></tr>
        <tr><td>Dry Powder</td><td>@Model.dryPowder</td></tr>
        <tr><td>Средний объем инвестиционного раунда</td><td>@Model.MedianValueOfInvesmentRound</td></tr>
        <tr><td>Название УК</td>
        <td>
            @if (Model.ManagementCompanyId !="0")
            {
            <a href="/details/mc/@Model.ManagementCompanyId">@Model.ManagementCompany</a>
            }
            else
            {
                @Model.ManagementCompany
            }            
        </td></tr>
        <tr><td>Стратегия </td><td>@Model.Strategy</td></tr>
    </table>

