    <style type="text/css">
        div.rounded {
            padding: 10px;
            height: 85vh;
            border: 1px solid #e7e7e7;
            border-radius: 15px;
            -moz-border-radius: 15px;
        }

        @@media (max-width: 500px) {
            .pageWrap {
                padding-top: 150px !important;
            }
        }
    </style>


    <style type="text/css">

        @@media screen and (max-width: 650px) {

            table.controlsTable {
                border: 0;
            }



                table.controlsTable thead {
                    border: none;
                    clip: rect(0 0 0 0);
                    height: 1px;
                    margin: -1px;
                    overflow: hidden;
                    padding: 0;
                    position: absolute;
                    width: 1px;
                }



                table.controlsTable tr {
                    display: block !important;
                    margin-bottom: .625em;
                }



                table.controlsTable td {
                    display: block;
                    text-align: left;
                }



                    table.controlsTable td::before {
                        content: attr(data-label);
                        float: left;
                        font-weight: bold;
                        text-transform: uppercase;
                    }



                    table.controlsTable td:last-child {
                        border-bottom: 0;
                    }
        }
    </style>


