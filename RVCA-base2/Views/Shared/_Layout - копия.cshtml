<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>@ViewBag.Title – РАВИ</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet">
    <!-- MetisMenu CSS -->
    <link href="~/Content/metisMenu.min.css" rel="stylesheet">
    <!-- Custom CSS -->
    <link href="~/Content/sb-admin-2.css" rel="stylesheet">
    <!-- Global CSS -->
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" type="text/css">
    <link rel="stylesheet" href="~/Content/Chosen/chosen.css" />
    <link rel="stylesheet" href="~/Content/Inputmask/inputmask.css" />
    <link href="~/Content/Site.css" rel="stylesheet">
    @Scripts.Render("~/bundles/modernizr")
    <script src="~/Scripts/jquery-migrate-3.1.0.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Content/metisMenu.min.js"></script>
    <script src="~/Content/sb-admin-2.js"></script>
    <script src="~/Content/Chosen/chosen.jquery.js"></script>
    <script src="~/Content/jquery.maskedinput.js"></script>
    <script src="~/Content/Inputmask/jquery.inputmask.js"></script>
    @* временно перенес скрипты вверх. потом разберусь *@
    @RenderSection("scripts", required: false)

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("База РАВИ", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Домашняя страница", "Index", "Home")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        <div style="margin-top:25px">
            @RenderBody()
        </div>     
    </div>
    <div class="container">
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year – Российская ассоциация венчурного инвестирования (РАВИ)</p>
        </footer>
    </div>


</body>
</html>
